{
    "gui": [
        {
            "label": "Inject",
            "window_name": "UE4-DDS-Tools (Inject mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" \"", "\" --save_folder=\"", "\" --version="],
            "button": "Inject",
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                },
                {
                    "type": "file",
                    "label": "DDS file (Drop or select .dds)",
                    "extension": "dds files (*.dds;*.DDS)| *.dds;*.DDS"
                },
                {
                    "type": "folder",
                    "label": "Output path (Drop or select a folder)"
                },
                {
                    "type": "choice",
                    "label": "UE4 version",
                    "items": ["4.26 ~ 4.27", "4.23 ~ 4.25", "4.20 ~ 4.22", "4.18 ~ 4.19", "4.15", "ff7r"],
                    "values": ["4.26", "4.23", "4.20", "4.18", "4.15", "ff7r"],
                    "default": 5
                }
            ]
        },
        {
            "label": "Export as dds",
            "window_name": "UE4-DDS-Tools (Export mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" --mode=export --save_folder=\"", "\" --version="],
            "button": "Export",
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                },
                {
                    "type": "folder",
                    "label": "Output path (Drop or select a folder)"
                },
                {
                    "type": "choice",
                    "label": "UE4 version",
                    "items": ["4.26 ~ 4.27", "4.23 ~ 4.25", "4.20 ~ 4.22", "4.18 ~ 4.19", "4.15", "ff7r"],
                    "values": ["4.26", "4.23", "4.20", "4.18", "4.15", "ff7r"],
                    "default": 5
                }
            ]
        },
        {
            "label": "Check version",
            "window_name": "UE4-DDS-Tools (Check mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" --mode=check"],
            "button": "Check",
            "show_last_line": true,
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                }
            ]
        },
        {
            "label": "Convert",
            "window_name": "Texconv",
            "command": ["texconv\\texconv.exe -r:keep \"", "\" -o \"", "\" -f", " -y "],
            "button": "Convert",
            "show_last_line": true,
            "components": [
                {
                    "type": "text",
                    "label": "Converts textures with texconv."
                },
                {
                    "type": "file",
                    "label": "Texture file. (You can use * or ? to specify multiple files.)",
                    "extension": "any files | *"
                },
                {
                    "type": "folder",
                    "label": "Output path"
                },
                {
                    "type": "choice",
                    "label": "Convert to",
                    "items": [".png", ".tga", ".hdr", "DXT1", "DXT5", "BC4U", "BC5U", "BC6HU", "BC7U", "B8G8R8A8", "FloatRGBA16"],
                    "values": ["t png", "t tga", "t hdr", " DXT1", " DXT5", " BC4_UNORM", " BC5_UNORM", " BC6H_UF16", " BC7_UNORM", "B8G8R8A8_UNORM_SRGB", "R16G16B16A16_FLOAT"],
                    "default": 1
                },
                {
                    "type": "checks",
                    "label": "Options",
                    "items": ["No mipmaps", "Resize to a power of 2 for width and height", "BC5 to .png or .tga"],
                    "values": ["-m 1 ", "-pow2 ", "-f rgba -reconstructz "]
                }
            ]
        }
    ],
    "help": [
        {
            "type": "url",
            "label": "README",
            "url": "github.com/matyalatte/UE4-DDS-Tools"
        },
        {
            "type": "url",
            "label": "How to Use",
            "url": "github.com/matyalatte/UE4-DDS-Tools/wiki/How-to-Use"
        },
        {
            "type": "url",
            "label": "About Simple Command Runner",
            "url": "https://github.com/matyalatte/Simple-Command-Runner"
        },
        {
            "type": "url",
            "label": "About Texconv",
            "url": "https://github.com/microsoft/DirectXTex/wiki/Texconv"
        }
    ]
}