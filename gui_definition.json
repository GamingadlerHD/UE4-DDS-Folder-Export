{
    "gui": [
        {
            "label": "Inject",
            "window_name": "UE4-DDS-Tools (Inject mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" \"", "\" --save_folder=\"", "\" --version="],
            "button": "Inject",
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                },
                {
                    "type": "file",
                    "label": "DDS file (Drop or select .dds)",
                    "extension": "dds files (*.dds;*.DDS)| *.dds;*.DDS"
                },
                {
                    "type": "folder",
                    "label": "Output path (Drop or select a folder)"
                },
                {
                    "type": "choice",
                    "label": "UE4 version",
                    "items": ["4.26 ~ 4.27", "4.23 ~ 4.25", "4.20 ~ 4.22", "4.18 ~ 4.19", "4.15", "ff7r"],
                    "values": ["4.26", "4.23", "4.20", "4.18", "4.15", "ff7r"],
                    "default": 5
                }
            ]
        },
        {
            "label": "Export as dds",
            "window_name": "UE4-DDS-Tools (Export mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" --mode=export --save_folder=\"", "\" --version="],
            "button": "Export",
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                },
                {
                    "type": "folder",
                    "label": "Output path (Drop or select a folder)"
                },
                {
                    "type": "choice",
                    "items": ["4.26 ~ 4.27", "4.23 ~ 4.25", "4.20 ~ 4.22", "4.18 ~ 4.19", "4.15", "ff7r"],
                    "values": ["4.26", "4.23", "4.20", "4.18", "4.15", "ff7r"],
                    "default": 5
                }
            ]
        },
        {
            "label": "Check version",
            "window_name": "UE4-DDS-Tools (Check mode)",
            "command": ["python\\python.exe src\\main.py \"", "\" --mode=check"],
            "button": "Check",
            "show_last_line": true,
            "components": [
                {
                    "type": "file",
                    "label": "Uasset file (Drop or select .uasset)",
                    "extension": "uasset files | *.uasset"
                }
            ]
        }
    ],
